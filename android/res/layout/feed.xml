<android.support.v4.widget.DrawerLayout
	xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/comment_feed"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:layout_gravity="top" android:gravity="top" android:orientation="vertical">

	<LinearLayout android:id="@+id/comment_layout"
		android:layout_width="match_parent" android:layout_height="match_parent"
		android:orientation="vertical">

		<ListView android:id="@android:id/list" android:layout_width="match_parent"
			android:layout_height="352dp" android:layout_weight="0.42"
			android:footerDividersEnabled="false" android:headerDividersEnabled="false">
		</ListView>

		<EditText android:id="@+id/text_entry_comments"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:hint="Submit your comment here" android:imeOptions="actionSend"
			android:inputType="text" />
	</LinearLayout>

	<LinearLayout android:id="@+id/filter_list" android:layout_width="200dp"
		android:layout_height="wrap_content" android:layout_gravity="right"
		android:layout_weight="0.42" android:background="@color/white"
		android:orientation="vertical">
		<LinearLayout android:id="@+id/forum_filter" 
		    android:layout_width="match_parent" android:layout_height="match_parent"
			android:orientation="horizontal">
			<Switch android:id="@+id/forum_switch" android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			<TextView android:id="@+id/forum_label"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="@string/forum_switch_text"
				android:textAppearance="?android:attr/textAppearanceLarge" />
		</LinearLayout>
		<LinearLayout android:id="@+id/general_filter" 
		    android:layout_width="match_parent" android:layout_height="match_parent"
			android:orientation="horizontal">
			<Switch android:id="@+id/general_switch" android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			<TextView android:id="@+id/general_label"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="@string/general_switch_text"
				android:textAppearance="?android:attr/textAppearanceLarge" />
		</LinearLayout>
		<LinearLayout android:id="@+id/trash_filter" 
		    android:layout_width="match_parent" android:layout_height="match_parent"
			android:orientation="horizontal">
			<Switch android:id="@+id/trash_switch" android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			<TextView android:id="@+id/trash_label"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="@string/trash_switch_text"
				android:textAppearance="?android:attr/textAppearanceLarge" />
		</LinearLayout>
	</LinearLayout>

</android.support.v4.widget.DrawerLayout>